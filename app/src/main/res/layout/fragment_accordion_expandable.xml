<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/accordionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle First View"/>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/accordionLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_expanded="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the first expandable content"
            android:padding="16dp"/>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <Button
        android:id="@+id/accordionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Second View"/>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/accordionLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_expanded="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the second expandable content"
            android:padding="16dp"/>
    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>
